generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Major {
  COMPUTER
  CEDT
  CHEMICAL
  MECHANICAL
  ELECTRICAL
  PETROLEUM
  CIVIL
  INDUSTRIAL
  SURVEY
  ENVIRONMENTAL
  NUCLEAR
  ADME
  NANO
  ICE
  AERO
  AI
}

model User {
  id        String  @id @default(uuid()) //Primary Key
  email     String  @unique
  name      String?
  lastRandomized  DateTime?
  googleId  String  @unique
  studentId String? @unique
  year      Int?
  faculty   String?
  major     Major?
  profileImage String?
  inventory Inventory[]
  wishlist Wishlist[]
}



model Charm {
  id    String  @id @default(uuid())
  name  String
  category Category
  imageUrl String?
  quote String
  variant String?
  rarity Rarity
  totalQuantity Int
  availableQuantity Int @default(5)
  inventory Inventory[]
  Wishlist Wishlist[]
}

enum Category {
  LOVE
  STUDY
  MONEY
  HEALTH
}

enum Rarity {
  COMMON
  RARE
}

model Inventory {
  id          String  @id @default(uuid())
  userId      String
  user        User    @relation(fields: [userId], references: [id])
  charmId     String
  charm       Charm   @relation(fields: [charmId], references: [id])
  acquiredAt  DateTime @default(now())
  expiresAt   DateTime?  // 1-day expiration
  @@index([userId])
  @@index([charmId])
}



model Wishlist {
  id       String  @id @default(uuid())
  userId   String
  user     User    @relation(fields: [userId], references: [id])
  charmId  String
  charm    Charm   @relation(fields: [charmId], references: [id])
  @@index([userId])
  @@index([charmId])
}
